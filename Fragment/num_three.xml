<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:design="http://schemas.android.com/apk/res-auto"
    android:id="@+id/num_three"
    android:layoutDirection="rtl"
    android:background="#f5f5f5">


    <ScrollView
        android:layout_width="match_parent"
        android:gravity="right"
        android:layoutDirection="rtl"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right"
            android:padding="5dp"
            android:layout_marginTop="10dp"
            android:layoutDirection="rtl"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:gravity="center"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="בדיקה גופנית "
                android:layout_marginTop="10dp"/>










            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="עור ומילוי קפילארי  "
                android:background="@color/colorAccent"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:layoutDirection="rtl"
                android:gravity="center"
                android:id="@+id/chickbox_dialog_d"
                android:layout_margin="5dp"
                />

            <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="אישונים "
            android:background="@color/colorAccent"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:layoutDirection="rtl"
                android:id="@+id/chickbox_dialog_e"
                android:gravity="center"
            android:layout_margin="5dp"
            />

            <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ריאות "
            android:background="@color/colorAccent"
            android:textColor="#ffffff"
                android:id="@+id/chickbox_dialog_f"

                android:textSize="20dp"
            android:layoutDirection="rtl"
            android:gravity="center"
            android:layout_margin="5dp"
            />

            <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="בטן "
                android:id="@+id/chickbox_dialog_g"
                android:background="@color/colorAccent"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:layoutDirection="rtl"
            android:gravity="center"
            android:layout_margin="5dp"
            />

            <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="סימני אי ספיקה "
            android:background="@color/colorAccent"
            android:textColor="#ffffff"
            android:textSize="20dp"
                android:id="@+id/chickbox_dialog_h"
                android:layoutDirection="rtl"
            android:gravity="center"
            android:layout_margin="5dp"
            />

            <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="קצב הלב "
                android:id="@+id/chickbox_dialog_i"
                android:background="@color/colorAccent"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:layoutDirection="rtl"
            android:gravity="center"
            android:layout_margin="5dp"
            />

            <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="א.ק.ג"
            android:background="@color/colorAccent"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:layoutDirection="rtl"
                android:id="@+id/chickbox_dialog_j"
                android:gravity="center"
            android:layout_margin="5dp"
            />


            <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="א.ק.ג בהשבאה לקודם "
                android:id="@+id/chickbox_dialog_k"
                android:background="@color/colorAccent"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:layoutDirection="rtl"
            android:gravity="center"
            android:layout_margin="5dp"
            />














            <View
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:background="#000000"
                android:layout_height="2dp"/>



            <!-- <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="time"
                android:ems="10"
                android:id="@+id/editText2"
                android:layout_weight="1" /> -->


            <Button
                android:layout_width="match_parent"
                android:text="הַבָּא"
                android:layoutDirection="rtl"
                android:layout_gravity="bottom"
                android:textColor="#ffffff"
                android:layout_margin="30dp"
                android:id="@+id/num_three_to_num_four"
                android:layout_height="match_parent"
                android:background="@color/colorAccent"/>
        </LinearLayout>
    </ScrollView>

</FrameLayout>
